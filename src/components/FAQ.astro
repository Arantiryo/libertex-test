<style is:global>
  .accordion__item,
  .accordion__header,
  .accordion__item:last-of-type .accordion__header,
  .accordion__item:last-of-type .accordion__panel,
  .accordion__panel,
  .is-active .accordion__header,
  .accordion__item.is-active .accordion__header,
  .panel__inner {
    border: none;
    padding-left: 0;
    padding-right: 0;
    text-align: left;
  }

  .panel__inner {
    padding-top: 16px;
    padding-bottom: 16px;
    padding-right: 32px;
  }

  .accordion__item .accordion__header,
  .is-active .accordion__panel,
  .accordion__item:last-of-type .accordion__header,
  .accordion__item:last-of-type .accordion__panel {
    border-bottom: 1px dashed rgba(176, 176, 176, 1);
  }

  .accordion__header {
    font-size: 18px;
    font-weight: 700;
    line-height: 24px;
    text-align: left;
  }

  .accordion__panel {
    font-size: 12px;
    font-weight: 600;
    line-height: 18px;
    text-align: left;
  }

  .header__toggle-indicator {
    min-width: 24px;
    padding: 4px;
    margin-left: 5px;
    color: #ff6633;
    border-radius: 100%;
    background-color: #f5f5f5;
  }

  @media screen and (min-width: 1024px) {
    .accordion__header {
      font-size: 24px;
      line-height: 30.67px;
    }

    .accordion__panel {
      font-size: 18px;
      line-height: 24px;
    }

    .panel__inner {
      padding-top: 24px;
      padding-bottom: 24px;
      padding-right: 48px;
    }

    .header__toggle-indicator {
      min-width: 28spx;
      padding: 6px;
      margin-left: 5px;
    }
  }
</style>
