---
import Header from '../components/Header.astro';
import '../styles/main.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Libertex" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preload" href="/fonts/mont-regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/mont-semibold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/mont-bold.woff2" as="font" type="font/woff2" crossorigin />
    <title>{title}</title>
  </head>
  <body class="font-mont">
    <Header />
    <slot />
  </body>
</html>
